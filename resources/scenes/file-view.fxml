<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitMenuButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="500" prefWidth="600.0" style="-fx-background-color: -fx-primary-grey;" stylesheets="@../styles/main.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="frontend.controllers.FileListController">
   <children>
      <StackPane>
         <children>
            <ListView fx:id="fileList" onKeyPressed="#listViewItemClicked" onMouseClicked="#listViewItemClicked" prefHeight="9.9999999E7" prefWidth="549.0" styleClass="dark-background" />
         </children>
      </StackPane>
      <VBox spacing="10.0">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
         <children>
            <HBox spacing="20.0">
               <children>
                  <HBox spacing="5.0">
                     <children>
                        <Label prefHeight="17.0" prefWidth="48.0" text="Dateien:" />
                        <Label fx:id="filesAmountLabel" alignment="CENTER" text="0" />
                        <Label fx:id="filesTotalSizeLabel" />
                     </children>
                  </HBox>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="20.0" VBox.vgrow="ALWAYS">
               <children>
                  <SplitMenuButton fx:id="sortMenuButton" contentDisplay="RIGHT" minWidth="124.0" mnemonicParsing="false" popupSide="TOP" text="Sortieren nach">
                     <items>
                        <MenuItem mnemonicParsing="false" onAction="#orderBySizeClicked" text="Größe" />
                        <MenuItem mnemonicParsing="false" onAction="#orderByTypeClicked" text="Typ" />
                        <MenuItem mnemonicParsing="false" onAction="#orderByNameClicked" text="Name" />
                        <MenuItem mnemonicParsing="false" onAction="#orderByTagsClicked" text="Tags" />
                        <MenuItem mnemonicParsing="false" onAction="#orderByDateClicked" text="Änderungsdatum" />
                     </items>
                  </SplitMenuButton>
                  <HBox alignment="CENTER_RIGHT" prefHeight="29.0" prefWidth="419.0" spacing="10.0">
                     <children>
                        <TextField fx:id="searchField" maxHeight="20.0" minHeight="20.0" onKeyTyped="#searchFiles" prefHeight="20.0" prefWidth="224.0" promptText="Suchen...">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </TextField>
                        <SplitMenuButton fx:id="searchByButton" contentDisplay="RIGHT" mnemonicParsing="false" popupSide="TOP" prefHeight="29.0" text="Suchen nach">
                          <items>
                            <MenuItem mnemonicParsing="false" onAction="#searchByNameClicked" text="Name" />
                            <MenuItem mnemonicParsing="false" onAction="#searchByPathClicked" text="Pfad" />
                              <MenuItem mnemonicParsing="false" onAction="#searchByTagsClicked" text="Tags" />
                          </items>
                        </SplitMenuButton>
                        <Button mnemonicParsing="false" onAction="#clearListClicked" prefHeight="29.0" text="Clear List">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>
