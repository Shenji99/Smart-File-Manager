<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitMenuButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="200.0" prefWidth="100.0" style="-fx-background-color: -fx-primary-grey;" stylesheets="@../styles/main.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="frontend.controllers.FileListController">
   <children>
      <StackPane>
         <children>
            <ListView fx:id="fileList" onKeyPressed="#listViewItemClicked" onMouseClicked="#listViewItemClicked" prefHeight="9.9999999E7" prefWidth="549.0" styleClass="dark-background" />
         </children>
      </StackPane>
      <VBox spacing="10.0">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <HBox spacing="5.0">
                     <children>
                        <Label prefHeight="17.0" prefWidth="48.0" text="Dateien:" />
                        <Label fx:id="filesAmountLabel" alignment="CENTER" text="0" />
                        <Label fx:id="filesTotalSizeLabel" />
                     </children>
                  </HBox>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="565.0" spacing="19.0">
               <children>
                  <SplitMenuButton minHeight="25.0" minWidth="124.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="124.0" text="Sortieren nach">
                     <items>
                        <MenuItem mnemonicParsing="false" onAction="#orderBySizeClicked" text="Größe" />
                        <MenuItem mnemonicParsing="false" onAction="#orderByTypeClicked" text="Typ" />
                        <MenuItem mnemonicParsing="false" onAction="#orderByNameClicked" text="Name" />
                        <MenuItem mnemonicParsing="false" onAction="#orderByDateClicked" text="Änderungsdatum" />
                     </items>
                  </SplitMenuButton>
                  <HBox alignment="CENTER_RIGHT" prefWidth="999999.0">
                     <children>
                        <TextField maxHeight="20.0" minHeight="20.0" onKeyTyped="#searchFiles" prefHeight="20.0" prefWidth="252.0" promptText="Suchen...">
                           <HBox.margin>
                              <Insets right="30.0" />
                           </HBox.margin>
                        </TextField>
                        <Button minHeight="25.0" minWidth="113.0" mnemonicParsing="false" onAction="#clearListClicked" prefHeight="25.0" prefWidth="113.0" text="Clear List" />
                     </children>
                  </HBox>
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>
